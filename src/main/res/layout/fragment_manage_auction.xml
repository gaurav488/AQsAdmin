<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context=".manage_auction">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        app:cardCornerRadius="6dp"
        app:cardMaxElevation="1dp"
        app:cardElevation="1dp"
        android:id="@+id/create_auction_card"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Auction"
                android:textSize="25dp"
                android:id="@+id/create_auction_text"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"
                android:layout_alignEnd="@id/create_auction_text"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@id/create_auction_text"
                android:gravity="center_horizontal" />
            <ImageView
                android:layout_alignParentBottom="true"
                android:id="@+id/left_auction_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/auction_hammer"
                android:layout_alignParentStart="true"
                 android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:layout_alignParentBottom="true"
                android:id="@+id/right_acc_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/right_angle_setting"
                android:layout_alignEnd="@id/create_auction_text"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@id/create_auction_text" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        app:cardCornerRadius="6dp"
        app:cardMaxElevation="1dp"
        app:cardElevation="1dp"
        android:id="@+id/past_auction_card"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Past Auction"
                android:textSize="25dp"
                android:id="@+id/past_auction_text"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"
                android:layout_alignEnd="@id/past_auction_text"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@id/past_auction_text"
                android:gravity="center_horizontal" />
            <ImageView
                android:layout_alignParentBottom="true"
                android:id="@+id/past_left_auction_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/past"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:layout_alignParentBottom="true"
                android:id="@+id/past_right_acc_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/right_angle_setting"
                android:layout_alignEnd="@id/past_auction_text"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@id/past_auction_text" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        app:cardCornerRadius="6dp"
        app:cardMaxElevation="1dp"
        app:cardElevation="1dp"
        android:id="@+id/admin_log_out_card"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="25dp"
                android:id="@+id/admin_logout_auction_text"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"
                android:layout_alignEnd="@id/admin_logout_auction_text"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@id/admin_logout_auction_text"
                android:gravity="center_horizontal" />
            <ImageView
                android:layout_alignParentBottom="true"
                android:id="@+id/admin_logout_left_auction_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/log101"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:layout_alignParentBottom="true"
                android:id="@+id/admin_logout_right_acc_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/right_angle_setting"
                android:layout_alignEnd="@id/admin_logout_auction_text"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@id/admin_logout_auction_text" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

</RelativeLayout>